.row.user_header
  .user_info.col-md-12
    #{user.gravatar(300)}
    %h1
      #{user} helped others
      .score
        %span #{user.supports_count}
        times
.row
  .col-md-6
    %h3 Skills
    %ul.skills
      - skills.each do |skill|
        %li= render skill
  .col-md-6
    %h3 Support history
    %ul.supports
      - supports.each do |support|
        %li= render support
= render 'layouts/back_to_home'
