.row
  .col-md-4
    #{supporter.gravatar(300)}
  .col-md-8
    = simple_form_for support, url: topic_supports_path(topic), html: { class: 'support' } do |f|
      = f.input :user_id, as: :hidden, input_html: { value: supporter.id }
      .comment-panel
        .arrow
        .comment-heading
          %ul
            %li.active= link_to 'Write', '#write-content', data: { toggle: 'tab' }, id: 'write-tab'
            %li= link_to 'Preview', '#preview-content', data: { toggle: 'tab' }, id: 'preview-tab'

        .comment-body
          #write-content.tab-pane.active
            = f.input :body, as: :text, label: false, input_html: { required: true }, placeholder: 'Describe what do you need help with'
          #preview-content.tab-pane

      = f.submit "Ask #{supporter} for help", class: 'btn btn-primary'
      = link_to 'Select another supporter', '#', class: 'btn btn-danger', data: { another_supporter: true }
  = render 'layouts/back_to_home'
