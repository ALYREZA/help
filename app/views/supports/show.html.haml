.container
  .row
    .col-md-12
      .row
        .col-xs-12.col-sm-8.col-md-7
          %h1.header-line
            = "##{support.ticket_id}"
            %span.capitalize_text
              = support.topic
          %h3.subheader-line
            = support.title
        .col-xs-12.col-sm-4.col-md-5.supporter-panel
          #{support.skip_button}
          #{support.action_button}

  .row
    .col-md-8
      .row
        .pic-holder.hidden-xs.hidden-sm
          = current_user.gravatar(60)

        .col-md-12
          .row
            .col-md-12.padding-for-avatar
              .markdown-panel
                .arrow.hidden-xs.hidden-sm
                .markdown-content
                  .active
                    .tab-pane#preview-content= preserve support.body

            .comments.col-md-12.padding-for-avatar
              = render 'comments/comments'
              = render 'comments/form'
