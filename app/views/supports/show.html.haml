.row.support_header
  .col-md-4
    .pull-left #{support.receiver_info}
  .col-md-4
    #{support.state_summary}
    #{support.finish_button}
    .clear-fix
    #{support.topic_summary}
  .col-md-4
    .pull-right #{support.user_info}

.row.support_body
  .col-md-12
    %h3 The request was:
    %blockquote
      %p #{support.body}

- if comments.any?
  .row.comments
    .panel.panel-default
      .panel-heading
        %span.glyphicon.glyphicon-comment
        %h3.panel-title Comments
      .panel-body.list-group
        = render comments

    = render 'comments/form'




